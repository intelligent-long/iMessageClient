<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:elevation="1000dp"
        android:background="?attr/colorSurfaceDim"
        app:layout_constraintTop_toTopOf="@id/content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:elevation="1000dp"
        android:background="?attr/colorSurfaceDim"
        app:layout_constraintBottom_toBottomOf="@id/content"/>

    <View
        android:layout_width="1.5dp"
        android:layout_height="wrap_content"
        android:elevation="1000dp"
        android:background="?attr/colorSurfaceDim"
        android:layout_gravity="start"
        app:layout_constraintStart_toStartOf="@id/content"
        app:layout_constraintBottom_toBottomOf="@id/content"/>

    <View
        android:layout_width="1.5dp"
        android:layout_height="wrap_content"
        android:elevation="1000dp"
        android:background="?attr/colorSurfaceDim"
        app:layout_constraintEnd_toEndOf="@id/content"
        app:layout_constraintBottom_toBottomOf="@id/content"/>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorSurfaceContainer"
        android:paddingHorizontal="12dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="\@"
            android:textSize="18sp"
            android:textColor="@color/ichat"
            android:layout_marginBottom="12dp"
            android:alpha="0.8"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/at">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:shapeAppearanceOverlay="@style/CircleImageAppearance"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@id/main_content"/>

            <LinearLayout
                android:id="@+id/main_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/avatar"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/layout_name_and_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="2dp"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/time"
                        android:layout_marginEnd="7dp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/colorOutline"
                        android:textSize="13sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="6dp"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:maxLines="11"
                    android:letterSpacing="0.007"
                    android:lineSpacingMultiplier="1.2"
                    android:breakStrategy="simple"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>