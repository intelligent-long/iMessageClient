<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standard_bottom_sheet"
    style="@style/Widget.Material3.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tint="?attr/colorSurfaceContainerHighest"
        app:srcCompat="@drawable/shape_bottom_sheet_drag_handle_view" />

    <LinearLayout
        android:id="@+id/add_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        style="@style/BottomSheetItemLayout"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="27.7dp"
            android:layout_height="27.7dp"
            android:src="@drawable/image_fill_24px"
            app:tint="?attr/colorControlNormal"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图片"
            android:textAppearance="@style/BottomSheetItemTitle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        style="@style/BottomSheetItemLayout"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="27.7dp"
            android:layout_height="27.7dp"
            android:src="@drawable/slideshow_fill_24px"
            app:tint="?attr/colorControlNormal"
            android:layout_marginEnd="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="视频"
            android:textAppearance="@style/BottomSheetItemTitle"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        style="@style/BottomSheetItemLayout"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="27.7dp"
            android:layout_height="27.7dp"
            android:src="@drawable/photo_camera_fill_24px"
            app:tint="?attr/colorControlNormal"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textAppearance="@style/BottomSheetItemTitle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/record_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        style="@style/BottomSheetItemLayout"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="27.7dp"
            android:layout_height="27.7dp"
            android:src="@drawable/videocam_fill_24px"
            app:tint="?attr/colorControlNormal"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="摄像"
            android:textAppearance="@style/BottomSheetItemTitle"/>
    </LinearLayout>
</LinearLayout>