<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/standard_bottom_sheet"
    style="@style/Widget.Material3.BottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tint="?attr/colorSurfaceContainerHighest"
        app:srcCompat="@drawable/shape_bottom_sheet_drag_handle_view"/>

        <TextView
            android:id="@+id/exclude_broadcast_channel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_exclude_broadcast_channel"
            android:textAppearance="@style/BottomSheetItemTitle"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            style="@style/BottomSheetItemLayout" />
</LinearLayout>