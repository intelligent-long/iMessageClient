                app:layout_constraintTop_toBottomOf="@id/media_6"
                app:layout_constraintBottom_toTopOf="@id/media_12"/>

            <com.longx.intelligent.android.ichat2.ui.NoPaddingTextView
                android:id="@+id/video_duration_9"
