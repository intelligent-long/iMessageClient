<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.IChat2Client" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="MainNavInfo">
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:tint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="WindowBackgroundColorBackground">
        <item name="background">@color/black</item>
    </style>

    <style name="WindowBackgroundColorDividerColor">
        <item name="dividerColor">@color/black</item>
    </style>

    <style name="ChatActivity" parent="Theme.IChat2Client">
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>