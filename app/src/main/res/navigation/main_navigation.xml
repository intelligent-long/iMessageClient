    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@+id/navigation_message">

    <fragment
        android:id="@+id/navigation_message"
        android:name="com.longx.intelligent.android.imessage.fragment.main.MessagesFragment"
        android:label="@string/title_message"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/navigation_channel"
        android:name="com.longx.intelligent.android.imessage.fragment.main.ChannelsFragment"
        android:label="@string/title_channel"
        tools:layout="@layout/fragment_channels" />

    <fragment
        android:id="@+id/navigation_broadcast"
        android:name="com.longx.intelligent.android.imessage.fragment.main.BroadcastsFragment"
        android:label="@string/title_broadcast"
        tools:layout="@layout/fragment_broadcasts" />
