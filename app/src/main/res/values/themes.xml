<resources xmlns:tools="http://schemas.android.com/tools" xmlns:ns1="http://schemas.android.com/apk/res-auto">
    <style name="Theme.IMessageClient" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.IMessageClient.Font1" parent="Theme.IMessageClient">
        <item name="fontFamily">@font/app_font_gsans_ntsanssc</item>
    </style>

    <style name="Theme.IMessageClient.Font2" parent="Theme.IMessageClient">
        <item name="fontFamily">@font/app_font_gsans_pingfangsc</item>
    </style>

    <style name="SettingsActivity" parent="Theme.IMessageClient">
        <item name="materialAlertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="alertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="android:preferenceCategoryStyle">@style/MaterialYouPreference.Category</item>
    </style>

    <style name="SettingsActivity.Font1" parent="Theme.IMessageClient">
        <item name="materialAlertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="alertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="android:preferenceCategoryStyle">@style/MaterialYouPreference.Category</item>
        <item name="android:fontFamily">@font/app_font_gsans_ntsanssc</item>
    </style>

    <style name="SettingsActivity.Font2" parent="Theme.IMessageClient">
        <item name="materialAlertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="alertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="android:preferenceCategoryStyle">@style/MaterialYouPreference.Category</item>
        <item name="android:fontFamily">@font/app_font_gsans_pingfangsc</item>
    </style>

    <style name="DarkStatusBarActivity" parent="Theme.IMessageClient">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="DarkStatusBarActivity.Font1" parent="Theme.IMessageClient.Font1">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="DarkStatusBarActivity.Font2" parent="Theme.IMessageClient.Font2">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ExpandedTitleTextAppearance" parent="">
        <item name="android:textSize">37sp</item>
    </style>

    <style name="CollapsedTitleTextStyle" parent="">
        <item name="android:fontWeight">@integer/font_weight_medium</item>
        <item name="android:textSize">22.2sp</item>
    </style>

    <style name="CircleImageAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BroadcastLikeCoverImageAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="MainActivityDrawerItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor">?attr/colorSurfaceContainerLow</item>
    </style>

    <style name="BottomSheetItemTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="BottomSheetItemLayout">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
    </style>

    <style name="TitleLargeMaterialAlertDialog" parent="@style/ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleLargeMaterialAlertDialogTitle</item>
    </style>

    <style name="TitleLargeMaterialAlertDialogTitle" parent="@style/MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
    </style>

    <style name="MainNavInfo">
        <item name="android:textColor">?attr/colorOnSecondaryFixedVariant</item>
        <item name="android:tint">?attr/colorOnSecondaryFixedVariant</item>
    </style>

    <style name="WindowBackgroundColorBackground">
        <item name="background">?attr/colorSurface</item>
    </style>

    <style name="WindowBackgroundColorDividerColor">
        <item name="dividerColor">?attr/colorSurface</item>
    </style>

    <style name="TabTextAppearance" parent="">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatActivity" parent="Theme.IMessageClient">
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <style name="ChatActivity.Font1" parent="Theme.IMessageClient.Font1">
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <style name="ChatActivity.Font2" parent="Theme.IMessageClient.Font2">
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
    </style>

    <style name="ChatActivityTitleText">
        <item name="android:textSize">21.6sp</item>
    </style>

    <style name="GalleryToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="RoundFloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Round</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="MainBottomNavigationView" parent="">
        <item name="itemTextAppearanceActive">@style/BottomNavTextAppearanceActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextAppearanceInactive</item>
    </style>

    <style name="BottomNavTextAppearanceActive" parent="TextAppearance.AppCompat">
        <item name="android:fontWeight">@integer/font_weight_medium</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="BottomNavTextAppearanceInactive" parent="TextAppearance.AppCompat">
        <item name="android:fontWeight">@integer/font_weight_regular</item>
        <item name="android:textSize">12.5sp</item>
    </style>

    <style name="AuthorDialog" parent="TitleLargeMaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleLargeMaterialAlertDialogTitle</item>
<!--        <item name="materialAlertDialogTitleIconStyle">@style/AuthorDialogIcon</item>-->
    </style>

    <style name="AuthorDialogIcon" parent="MaterialAlertDialog.Material3.Title.Icon">
        <item name="android:layout_marginEnd" ns1:ignore="NewApi">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">19dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TonalDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">21sp</item>
    </style>
</resources>