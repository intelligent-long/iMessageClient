<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MaterialYouPreference" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:preferenceCategoryStyle">@style/MaterialYouPreference.Category</item>
        <item name="materialAlertDialogTheme">@style/MaterialYouPreference.Dialog</item>
        <item name="alertDialogTheme">@style/MaterialYouPreference.Dialog</item>
    </style>

    <style name="MaterialYouPreference.Dialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="dialogCornerRadius">28dp</item>
        <item name="android:colorBackground">?attr/colorSurfaceContainer</item>
    </style>

    <style name="MaterialYouPreference.Category" parent="">
        <item name="android:layout">@layout/material_preference_category</item>
    </style>

    <style name="Theme.MaterialYouPreference.MaterialPreference">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">24dp</item>
<!--        <item name="android:paddingTop">15dp</item>-->
<!--        <item name="android:paddingBottom">15dp</item>-->
        <item name="android:paddingTop">16.9dp</item>
        <item name="android:paddingBottom">16.9dp</item>
    </style>

    <style name="Theme.MaterialYouPreference.MaterialPreferenceHeaderSwitch">
        <item name="background">@drawable/header_switch_background</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Theme.MaterialYouPreference.MaterialPreference.Icon">
        <item name="android:tint">?colorOnSurface</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>

    <style name="MaterialYouPreferenceSummary">
        <item name="android:tint">?colorOnSurface</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
<!--        <item name="lineHeight">20sp</item>-->
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">2.6dp</item>
    </style>

    <style name="MaterialYouPreferenceTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">21.6sp</item>
        <item name="android:letterSpacing">0</item>
<!--        <item name="lineHeight">28sp</item>-->
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.MaterialYouPreference.MaterialPreference.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
    </style>

    <style name="MaterialYouPreferenceCategory">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8.8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.00714286</item>
<!--        <item name="lineHeight">20sp</item>-->
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
